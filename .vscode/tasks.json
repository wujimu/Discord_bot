{
    "tasks": [
        {
            "type": "shell",
            "label": "clang++-9 build active file",
            "command": "/usr/bind/clang++-9",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-std=c++17",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ]
}